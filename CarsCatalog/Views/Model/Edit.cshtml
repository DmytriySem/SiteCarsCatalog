@model Catalog.Models.ModelViewModel
@using Catalog.Helpers

@using (Html.BeginForm("Edit", "Model", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>
        <div>
            @Html.GetImageString(Model.PhotoUrl)
        </div>
        @Html.ValidationSummary(true)
        <div class="data-form">
            <div>
                @Html.EditorFor(model => model.Id)
            </div>
            <div class="data-form-row-input">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="data-form-row-input">
                @Html.LabelFor(model => model.PhotoUrl)
                @Html.TextBoxFor(model => model.File, new { type = "file" })
                @Html.ValidationMessageFor(model => model.File)
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}